#!/usr/bin/env bash

# Check if at least one argument is provided
if [ "$#" -lt 1 ]; then
  echo "Missing expected argument(s)."
  exit 1
fi

# Loop through all provided arguments
for file in "$@"; do
  # Check if the file exists and does not start with a dot
  if [[ -e "$file" && "$file" != .* ]]; then
    # Add a leading dot to hide the file
    mv "$file" ".$file"
  else
    if [[ -e "$file" ]]; then
      echo "$file is already hidden. Name left unchanged."
    else
      echo "File $file does not exist."
    fi
  fi
done
